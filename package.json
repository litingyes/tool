{
  "name": "tool",
  "description": "Tool Collection",
  "license": "MIT",
  "keywords": [
    "nuxt",
    "tool"
  ],
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . && stylelint \"**/*.{css,scss}\"",
    "format": "eslint --fix . && stylelint --fix \"**/*.{css,scss}\"",
    "commit": "git add . && git-cz",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.43.1",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@commitlint/cz-commitlint": "^17.8.1",
    "@iconify/json": "^2.2.216",
    "@nuxt/devtools": "^0.8.5",
    "@nuxt/image-edge": "1.0.0-28342020.fed0a3b",
    "@nuxthq/ui": "^2.7.0",
    "@nuxtjs/eslint-module": "^4.1.0",
    "@nuxtjs/fontaine": "^0.4.1",
    "@nuxtjs/i18n": "8.1.1",
    "@nuxtjs/stylelint-module": "^5.2.0",
    "@tiptap/extension-character-count": "^2.2.4",
    "@tiptap/extension-floating-menu": "^2.2.4",
    "@tiptap/extension-highlight": "^2.2.4",
    "@tiptap/extension-image": "^2.2.4",
    "@tiptap/extension-link": "^2.2.4",
    "@tiptap/extension-placeholder": "^2.2.4",
    "@tiptap/extension-subscript": "^2.2.4",
    "@tiptap/extension-superscript": "^2.2.4",
    "@tiptap/extension-table": "^2.2.4",
    "@tiptap/extension-table-cell": "^2.2.4",
    "@tiptap/extension-table-header": "^2.2.4",
    "@tiptap/extension-table-row": "^2.2.4",
    "@tiptap/extension-task-item": "^2.2.4",
    "@tiptap/extension-task-list": "^2.2.4",
    "@tiptap/extension-text-align": "^2.2.4",
    "@tiptap/extension-typography": "^2.2.4",
    "@tiptap/extension-underline": "^2.2.4",
    "@tiptap/pm": "^2.2.4",
    "@tiptap/starter-kit": "^2.2.4",
    "@tiptap/suggestion": "^2.2.4",
    "@tiptap/vue-3": "^2.2.4",
    "@types/node": "^18",
    "@vueuse/core": "^10.9.0",
    "@vueuse/nuxt": "^10.9.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-tailwindcss": "^3.14.3",
    "inquirer": "8",
    "lint-staged": "^13.3.0",
    "markdown-it": "^13.0.2",
    "nuxt": "^3.10.3",
    "nuxt-lodash": "^2.5.3",
    "sass": "^1.71.1",
    "simple-git-hooks": "^2.10.0",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "tippy.js": "^6.3.7",
    "tiptap-markdown": "^0.8.9",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,vue,json,md}": "eslint --fix"
  }
}
